<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BBDCBC"
    android:padding="8dp"
    tools:context=".data_hamapenyakit">

    <Button
        android:id="@+id/user"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="106dp"
        android:layout_marginTop="334dp"
        android:layout_marginBottom="276dp"
        android:backgroundTint="#47612A"
        android:onClick="hama"
        android:text="GEJALA"
        android:textColor="#F8FAF6"
        android:textStyle="bold" />

    <Button
        android:id="@+id/admin"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="106dp"
        android:layout_marginTop="334dp"
        android:layout_marginBottom="443dp"
        android:backgroundTint="#47612A"
        android:onClick="penyakit"
        android:text="DATA PENYAKIT"
        android:textColor="#F4F6F2"
        android:textStyle="bold" />

    <Button
        android:id="@+id/rule"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="106dp"
        android:layout_marginTop="420dp"
        android:layout_marginBottom="381dp"
        android:backgroundTint="#47612A"
        android:onClick="rule"
        android:text="DATA HAMA"
        android:textColor="#F4F6F2"
        android:textStyle="bold" />

    <Button
        android:id="@+id/solusi"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="106dp"
        android:layout_marginTop="430dp"
        android:layout_marginBottom="326dp"
        android:backgroundTint="#47612A"
        android:onClick="solusi"
        android:text="SOLUSI"
        android:textColor="#F4F6F2"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/hama_penyakit"
        android:layout_width="407dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:textColor="#EEF6EE"
        android:background="#471D4E"
        android:gravity="center"
        android:text="HAMA DAN PENYAKIT"
        android:textSize="22sp"
        android:textStyle="bold" />


</RelativeLayout>